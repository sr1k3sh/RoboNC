<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_2sdp"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="Length:"
        />

    <EditText
        android:id="@+id/clength"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/background"
        android:digits="1234567890"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:maxLength="5"
        android:textSize="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clength"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="Breadth:"
        />

    <EditText
        android:id="@+id/cbreadth"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/b"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:digits="1234567890"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:maxLength="5"
        android:textSize="@dimen/_10sdp"
         />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbreadth"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="Edge Distance:"
        />

    <EditText
        android:id="@+id/cdistance"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/c"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:digits="1234567890"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:maxLength="5"
        android:textSize="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdistance"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="Radius of Edge:"
         />

    <EditText
        android:id="@+id/cedge"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/d"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:digits="1234567890"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:maxLength="5"
        android:textSize="@dimen/_10sdp"/>

</RelativeLayout>